{
  "layer-filter": [
    "in",
    "layout.text-field",
    "{name}",
    "{name_en}"
  ],
  "decorators": [
    {
      "layout.text-field": "{name:latin}\n {name:nonlatin}",
      "filter-all-part": [
        "!has",
        "name:cs"
      ]
    },
    {
      "layer-name-postfix": "en",
      "layout.text-field": "{name:cs}\n {name:nonlatin}",
      "filter-all-part": [
        "has",
        "name:cs"
      ]
    }
  ]
}
